<% unless viewer.request.hide_embed_this? %>
  <%= embed_panel(viewer: viewer) do %>
    <div class='sul-embed-section'>
      <% checkbox_options = { type: 'checkbox', id: 'sul-embed-embed-download', 'data-embed-attr': 'hide_download' } %>
      <% checkbox_options[:checked] = 'true' unless viewer.request.hide_download? %>
      <%= tag :input, checkbox_options %>
      <label for='sul-embed-embed-download'>download</label>
    </div>
  <% end %>
<% end %>
